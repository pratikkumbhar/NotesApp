<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredientanimation"
    tools:context=".Activity.LoginActivity">

    <View
        android:id="@+id/loginview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/viewbackgroundlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ImageView
        android:id="@+id/loginimageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/yellowlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/loginapptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bungee"
        android:text="NotesApp"
        android:textColor="#2E2E2E"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginimageview" />

    <TextView
        android:id="@+id/logintextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"

        android:fontFamily="@font/baloo_bhai"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Login"
        android:textColor="#000000"

        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginview"
        android:gravity="center_horizontal" />

    <EditText

        android:id="@+id/loginemailedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#292929"
        android:layout_marginRight="30dp"
        android:background="@drawable/logintitle"
        android:hint="Enter Email"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColorHint="#757373"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logintextview" />

    <EditText

        android:id="@+id/loginpassowrdedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/logintitle"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="#292929"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColorHint="#757373"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginemailedittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have account ?"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:id="@+id/donthaveaccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpassowrdedittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logintitle"
        android:fontFamily="@font/bungee"
        android:textColor="#333333"
        android:id="@+id/loginbutton"
        android:text="Login"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpassowrdedittext" />

</androidx.constraintlayout.widget.ConstraintLayout>